<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/time_display_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >
        <include
            layout="@layout/time_header_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_gravity="center" />
    </FrameLayout>

    <!--TODO: This would be your GridSelectorLayout. The actual pads themselves are NumberGrids.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_picker_pad_height"
        android:orientation="horizontal">

        <include layout="@layout/pad_12h_grid_time_picker" />
        <include layout="@layout/pad_time_picker_sidebar" />

    </LinearLayout>

</LinearLayout>